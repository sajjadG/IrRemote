<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nullpx.irremote.FeedbackActivityFragment"
    tools:showIn="@layout/activity_feedback">


    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:id="@+id/spinner_feedback" />

    <EditText
        android:text="@string/please_enter_your_feedback_in_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/tv_feedback"
        android:layout_below="@+id/spinner_feedback"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:selectAllOnFocus="false"
        />
</RelativeLayout>
